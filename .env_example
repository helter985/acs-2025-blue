# Configuración de la aplicación
APP_NAME=Interlimpia API
API_PREFIX=/api
DEBUG=True

# Configuración de MySQL
MYSQL_ROOT_PASSWORD=root_password_here
MYSQL_USER=
MYSQL_PASSWORD=
MYSQL_DATABASE=interlimpia
MYSQL_PORT=3306
MYSQL_HOST=localhost
MYSQL_ALLOW_EMPTY_PASSWORD=no

# URL de conexión a la base de datos (SQLAlchemy)
# Formato: mysql+pymysql://username:password@host:port/database
DATABASE_URL=mysql+pymysql://${MYSQL_USER}:${MYSQL_PASSWORD}@${MYSQL_HOST}:${MYSQL_PORT}/${MYSQL_DATABASE}

# Configuración de Docker (opcional)
# Descomentar si usas Docker
# MYSQL_HOST=mysql

# Configuración de almacenamiento de imágenes
STORAGE_URL=https://storage.interlimpia.com

# Configuración de seguridad
SECRET_KEY=your_secret_key_here
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Configuración de CORS
ALLOW_ORIGINS=["http://localhost:3000", "https://interlimpia.com"]